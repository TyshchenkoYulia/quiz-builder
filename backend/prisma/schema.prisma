datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Quiz {
  id         Int       @id @default(autoincrement())
  title      String
  questions  Question[]
  createdAt  DateTime  @default(now())
}

model Question {
  id       Int       @id @default(autoincrement())
  quizId   Int
  text     String
  type     QuestionType
  options  String?   // JSON string for checkbox options
  quiz     Quiz      @relation(fields: [quizId], references: [id])
}

enum QuestionType {
  BOOLEAN
  INPUT
  CHECKBOX
}
